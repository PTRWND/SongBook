<Window x:Class="Spiewnik.NewSong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowa piosenka" Height="160" Width="322.333" Icon="Resources/icon.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <Label Content="Ilość wierszy pięcolinii" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" Margin="12,12,0,0"/>
        <Button x:Name="createNewSong" Content="OK" HorizontalAlignment="Right" Margin="0,0,12,12" VerticalAlignment="Bottom" Width="132" Height="30" Click="createNewSong_Click"/>
        <Button x:Name="exit" Content="Anuluj" HorizontalAlignment="Left" Margin="12,0,0,12" VerticalAlignment="Bottom" Width="132" Height="30" Click="exit_Click"/>
        <ComboBox x:Name="numberOfLines" HorizontalAlignment="Right" Margin="0,12,12,0" VerticalAlignment="Top" Width="132" Height="26"/>
        <Label Content="Wysokość pięciolinii (px)" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" Margin="12,43,0,0"/>
        <ComboBox x:Name="heightOfLines" HorizontalAlignment="Right" Margin="0,43,12,0" VerticalAlignment="Top" Width="132" Height="26"/>
    </Grid>
</Window>
